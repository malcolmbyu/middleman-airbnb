
<div id="about">
  <div class="about-content">
    <h1>This template was built with <i class="fa fa-heart"></i> by</h1>

    <ul class="list-inline text-center">
      <% ["gerbau", "malcolmbyu"].each do |gh_username| %>
        <li>
          <% link_to "https://kitt.lewagon.com/alumni/#{gh_username}", target: "_blank" do %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{gh_username}", class: "img-circle" %>
          <% end %>
          <h3><%= gh_username.capitalize %></h3>
          <p>
            <% link_to "https://github.com/#{gh_username}", target: "_blank" do %>
              <i class="fa fa-github"></i> <%= gh_username %>
            <% end %>
          </p>
        </li>
      <% end %>
    </ul>

  </div>
</div>
